// 6
db.clientes.aggregate([
  {
    $addFields: {
      idade: {
        $floor: {
          $divide: [
            { $subtract: ["$$NOW", "$dataNascimento"] },
            { $multiply: [365, 86400000] }
          ] 
        }
      }
    }
  },
  {
    $lookup: {
      from: "vendas",
      localField: "clienteId",
      foreignField: "clienteId",
      as: "compras"
    }
  },
  {
    $match: {
      "compras.dataVenda": {
        $gte: ISODate("2019-06-01"),
        $lte: ISODate("2020-03-31")
      } 
    }
  },
  {
    $addFields: {
      totalCompras: {
        $size: "$compras"
      }
    }
  },
  { $sort: { totalCompras: -1 } },
  { $limit: 5 },
  { $project: { _id: "$endereco.uf", totalCompras: 1 } }
]);

// 7
db.vendas.aggregate([
  { $unwind: "$itens" },
  {
    $match: {
    "itens.nome": "QUEIJO PRATO"
    }
  },
  {
    $group: {
      _id: "$clienteId",
      totalConsumido: { $sum: "$itens.quantidade" }
    }
  },
  { $sort: { totalConsumido: -1 } },
  { $limit: 1 },
  {
    $lookup: {
      from: "clientes",
      localField: "_id",
      foreignField: "clienteId",
      as: "dados"
    }
  },
  { $unwind: "$dados" },
  {
    $project: {
      _id: 0,
      totalConsumido: 1,
      nomeCliente: "$dados.nome",
      uf: "$dados.endereco.uf"
    } 
  }
]);

