db.vendas.aggregate([
  {
    $match: {
      dataVenda: {
        $gte: ISODate("2020-03-01"),
        $lte: ISODate("2020-03-31")
      },
      status: "EM SEPARACAO"
    }
  },
  {
    $addFields: {
      dataEntregaPrevista: {
        $add: ["$dataVenda", { $multiply: [1000, 3600, 24, 3] }]
      }
    }
  },
  {
    $project: {
      _id: 0,
      clienteId: 1,
      dataVenda: 1,
      dataEntregaPrevista: 1
    }
  }
])

// 9
db.vendas.aggregate([
  {
    $match: {
      dataVenda: {
        $gte: ISODate("2020-03-01"),
        $lte: ISODate("2020-03-31")
      },
      status: "EM SEPARACAO"
    }
  },
  {
    $addFields: {
      dataEntregaPrevista: {
        $add: ["$dataVenda", { $multiply: [1000, 3600, 24, 3] }]
      }
    }
  },
  {
    $group: {
      _id: null,
      arrayDatas: {
        $push: "$dataEntregaPrevista"
      }
    }
  },
  {
    $project: {
      _id: 0,
      primeira_data: { $min: "$arrayDatas" },
      ultima_data: { $max: "$arrayDatas" },
      diferenca: {
        $round: [
          {
            $abs: {
              $divide: [
                { $subtract: [{ $min: "$arrayDatas" }, { $max: "$arrayDatas" }] },
                { $multiply: [1000, 3600, 24] }
              ]
            }
          }
        ]
      }
    }
  }
]);